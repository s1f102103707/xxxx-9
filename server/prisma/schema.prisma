datasource db {
  provider = "postgresql"
  url      = env("API_DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model User {
  id        String   @id
  email     String
  name      String
  createdAt DateTime
  tasks     Task[]
}

model Task {
  id        String   @id
  label     String
  done      Boolean
  imageKey  String?
  createdAt DateTime
  User      User     @relation(fields: [userId], references: [id])
  userId    String
}
